<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CameraRigController.View"
    xmlns:Custom="http://schemas.tainicom.net/wpfpropertygrid" xmlns:ViewModel="clr-namespace:CameraRigController.ViewModel" x:Class="CameraRigController.View.MotorTab"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding Source={StaticResource Locator}}">

    
    <Grid>
        <Custom:PropertyGrid Name="PropertyGrid" SelectedObject="{Binding MotorTab}"/>
    </Grid>
</UserControl>
